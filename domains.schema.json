{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://concept-markers.local/domains.schema.json",
  "title": "Concept Markers Domain Inventory",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "domains"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "domains": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["folder", "host"],
        "properties": {
          "folder": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[^/\\\\]+$"
          },
          "host": {
            "type": "string",
            "pattern": "^[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?(?:\\.[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?)+$"
          }
        }
      }
    }
  }
}
