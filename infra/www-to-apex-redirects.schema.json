{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://concept-markers.local/infra/www-to-apex-redirects.schema.json",
  "title": "WWW to Apex Redirect Rows",
  "description": "Schema for CSV rows after parsing with header: Source URL, Target URL, Status Code.",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["Source URL", "Target URL", "Status Code"],
    "properties": {
      "Source URL": {
        "type": "string",
        "pattern": "^https://www\\.[a-z0-9.-]+/\\*$"
      },
      "Target URL": {
        "type": "string",
        "pattern": "^https://[a-z0-9.-]+/\\$1$"
      },
      "Status Code": {
        "type": "integer",
        "enum": [301]
      }
    }
  }
}
